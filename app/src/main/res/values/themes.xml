<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleWeatherApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/backgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="toolbarStyle">@style/Widget.SimpleWeatherApp.Toolbar</item>
    </style>

    <style name="Widget.SimpleWeatherApp.Toolbar"
        parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SimpleWeatherApp.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.MdcTypographyStyles.Headline6</item>
    </style>

    <style name="ThemeOverlay.SimpleWeatherApp.Toolbar" parent="">
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorOnPrimary">@color/onBackgroundColor</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/lato</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">101sp</item>
